@{ 
    ViewBag.limit = 2;
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<form id="mySelect">
    Select a fruit:
    <br>
    <input class="box" type="checkbox" value="Apple" />Apple</br>
    <input class="box" type="checkbox" value="Pear" />Pear</br>
    <input class="box" type="checkbox" value="Pear" />Pear</br>
    <input class="box" type="checkbox" value="Banana" />Banana</br>
    <input class="box" type="checkbox" value="Orange" />Orange</br>
</form>
<br>

<script>
    var limit = @ViewBag.limit;
    $('input.box').on('change', function (evt) {
        if ($(this).siblings(':checked').length >= limit) {
            this.checked = false;
        }
    });

</script>